<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="3" columns="1" carrier="mcast">
        <plot gridx="0"
              gridy="0"
              hspan="1"
              vspan="1"
              title="Roll Gazebo inertial(red)"
              size="200"
              minval="-2"
              maxval="18"
              bgcolor="white">

            <graph remote="/icubSim/xens_inertial"
                   index="0"
                   color="Red"
                   title="Xsens roll"
                   type="lines"
                   size="3" />
         </plot>
        <plot gridx="0"
              gridy="1"
              hspan="1"
              vspan="1"
              title="Pitch Gazebo inertial(red)"
              size="200"
              minval="-2"
              maxval="18"
              bgcolor="white">

            <graph remote="/icubSim/xens_inertial"
                   index="1"
                   color="Red"
                   title="Xsens pitch"
                   type="lines"
                   size="3" />
         </plot>

         <plot gridx="0"
              gridy="2"
              hspan="1"
              vspan="1"
              title="Yaw Gazebo inertial(red)"
              size="200"
              minval="-2"
              maxval="18"
              bgcolor="white">

            <graph remote="/icubSim/xens_inertial"
                   index="2"
                   color="Red"
                   title="Xsens yaw"
                   type="lines"
                   size="3" />
         </plot>

</portscope>

